---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<div>
  <div class="mb-2">
    <h2 class="text-slate-50 text-2xl underline underline-offset-2 font-bold">
      <a href={`/blog/${post.slug}`}>{post.data.title}</a>
    </h2>
    <p class="text-slate-400">
      {
        post.data.date.toLocaleDateString("en-IN", {
          day: "numeric",
          month: "long",
          year: "numeric",
        })
      }
    </p>
  </div>
  <p class="text-slate-300">{post.data.description}</p>
  <hr class="my-3" />
</div>
