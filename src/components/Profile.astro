---
import type { CollectionEntry } from "astro:content";

interface Props {
  profile: CollectionEntry<"profile">;
}

const ptProfile = Astro.props;
---

<div>
  <h1 class="name">{ptProfile.profile.data.Name}</h1>
</div>
<style>
  div {
    background-color: whitesmoke;
    width: 80%;
    margin-left: auto;
    margin-right: auto;
    margin-top: 30px;
    margin-bottom: 30px;
    padding-left: 50px;
    padding-right: 50px;
    padding-top: 70px;
    padding-bottom: 70px;
    font-family: "Roboto Mono", monospace;
  }
  @media screen and (max-width: 770px) {
    div {
      max-width: 100%;
    }
  }
</style>
