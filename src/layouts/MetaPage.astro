---
import Page from "./Page.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Page title={title}>
  <div class="flex flex-row justify-center w-full">
    <div class="w-full max-w-prose">
      <h1 class="text-4xl text-slate-50 font-extrabold mb-8">{title}</h1>
      <slot />
    </div>
  </div>
</Page>
