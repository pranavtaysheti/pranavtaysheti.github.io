---
import email from "@assets/email.png";
import github from "@assets/github.png";
import linkedin from "@assets/linkedin.png";
import background from "@assets/white-texture.jpg"

interface Props {
  title: string;
}

const currentURL = new URL(Astro.request.url).pathname;
const { title } = Astro.props;

type Link = {
  name: string;
  link: string;
};

type SocialLink = Link & {
  icon: string;
};
const navLinks: Array<Link> = [
  {
    name: "Home",
    link: "/",
  },
  {
    name: "Blog",
    link: "/blog/",
  },
];

const socialLinks: Array<SocialLink> = [
  {
    name: "Linkedin",
    link: "https://linkedin.com/in/pranavtaysheti",
    icon: linkedin.src,
  },
  {
    name: "Github",
    link: "https://github.com/pranavtaysheti",
    icon: github.src,
  },
  {
    name: "Email",
    link: "mailto:pranavtaysheti@gmail.com",
    icon: email.src,
  },
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.svg" />
    <title>{"Pranav Taysheti's ".concat(title)}</title>
  </head>
  <body>
    <header>
      <nav>
        <ul>
          {
            navLinks.map(({ name, link }) => {
              const className = "link ".concat(
                link === currentURL ? "active" : ""
              );
              return (
                <li class={className}>
                  <a href={link}>{name}</a>
                </li>
              );
            })
          }
          <li class="seperator"></li>
          {
            socialLinks.map(({ link, icon }) => {
              return (
                <li class="link">
                  <a href={link} target="_blank">
                    <img src={icon} height="24" />
                  </a>
                </li>
              );
            })
          }
        </ul>
      </nav>
      <div></div>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
<style>
  @import url("https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@500&display=swap");

  * {
    box-sizing: border-box;
  }
  body {
    margin: 0%;
    background-color: whitesmoke;
    background-image: url("/white-texture.jpg");
  }
  header {
    margin: 0%;
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
  }
  nav {
    background-color: black;
    width: 100%;
    height: 60px;
    margin: 0%;
  }
  nav ul {
    display: flex;
    gap: 12px;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    list-style: none;
    height: 60px;
    margin: 0px;
    padding-left: 60px;
    padding-right: 60px;
  }
  nav ul li.link {
    text-transform: uppercase;
    font-size: large;
    font-family: Roboto Slab;
    padding: 8px;
    font-weight: 500;
    color: red;
  }
  nav ul li.link.active {
    padding: 6px;
    border: 2px solid white;
  }
  nav ul li.seperator {
    flex-grow: 1;
    flex-shrink: 1;
  }
  nav ul li.link:active {
    padding: 6px;
    border: 2px solid brown;
  }
  header div {
    background-color: red;
    display: block;
    height: 4px;
    margin: 0px;
  }
  nav ul li.link a:link {
    color: red;
    text-decoration: none;
  }
  nav ul li.link a:visited {
    color: red;
    text-decoration: none;
  }
  nav ul li.link:not(.active) a:hover {
    text-decoration: underline dotted;
    text-underline-offset: 6px;
  }
  nav ul li.link.active a {
    color: white;
  }
  nav ul li.link a:active {
    color: brown;
    text-decoration: underline;
    text-underline-offset: 6px;
  }
</style>
